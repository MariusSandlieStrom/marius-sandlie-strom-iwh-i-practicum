doctype html 
html 
    head
        title Create New Contact
        link(rel="stylesheet", href="/css/style.css")
    body
        h1 Create New Contact
        form(action="/createNew", method="POST")
            label(for="firstName") First Name
            input(type="text", name="firstName")
            br
            label(for="lastName") Last Name
            input(type="text", name="lastName")
            br
            label(for="email") Email
            input(type="email", name="email")
            br
            label(for="bio") Bio
            input(type="text", name="bio")
            br
            label(for="videoGames") Video Games
            input(type="text", name="videoGames")
            br
            label(for="favoriteMovie") Favorite Movie
            input(type="text", name="favoriteMovie")
            br
            input(type="submit", value="Submit")
        p 
            a(href="/contacts") Back to Contacts